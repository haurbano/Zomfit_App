<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="player"
            type="salt.movil.funfit.models.Player"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_game_over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="salt.movil.funfit.ui.GameOverActivity"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txt_name_user_game_over"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="@{player.username}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_game_over"
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="Game Over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/first_activity_zombie"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>

