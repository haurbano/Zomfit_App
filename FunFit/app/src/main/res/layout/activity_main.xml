<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="string"
        type="String"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="salt.movil.funfit.ui.MainActivity">

        <include
            android:id="@+id/content_top_option"
            layout="@layout/top_bar_game"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_top_option">

            <include
                android:id="@+id/content_powers_layout"
                layout="@layout/powers_layout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/frame_content_qr_reader"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>

            <TextView
                android:text="i do not nkow"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>


    </RelativeLayout>

</layout>


